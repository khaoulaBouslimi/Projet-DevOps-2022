pipeline {
    agent any
    stages{
        stage('CleanWorkspace') {
            steps {
                cleanWs()
            }
        }
        stage(' GIT'){
         steps {
            echo 'Pulling...';
            git branch: 'Categry_Product_Test',credentialsId: 'giittoken', url: 'https://github.com/khaoulaBouslimi/Projet-DevOps-2022.git'
               }
        }
        stage('Clean'){
            steps {
    
            sh "mvn clean"
               }
            
        }
        
        stage('Compile'){
            steps {
    
            sh "mvn compile"
               }
            
        }
        stage('Test'){
            steps {
    
            sh "mvn test"
               }
            
        }
        stage('Sonar'){
            steps {
            withSonarQubeEnv( installationName: 'sonar'){
            sh 'mvn sonar:sonar -Dsonar.login=802f1a3711d5244481775b3daab60917d686bb53'
               
            }
            
        }
    }    
        stage ("Nexus"){
			steps{
			nexusArtifactUploader artifacts: [[artifactId: 'achat',
            file: 'target/achat-1.0.jar',
            type: 'jar']],
            credentialsId: 'nexus-auth',
            groupId: 'tn.esprit.rh', 
            nexusUrl: '192.168.1.10:8081', 
            nexusVersion: 'nexus3', 
            protocol: 'http', repository: 'achat-release', version: '1.0'
                       
            }
        }
    }
}
