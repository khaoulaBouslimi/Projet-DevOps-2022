pipeline {
environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}
    agent any
    
    stages{
        
        stage(' GIT'){
         steps {
            echo 'Pulling...';
            git branch: 'Categry_Product_Test',credentialsId: 'giittoken', url: 'https://github.com/khaoulaBouslimi/Projet-DevOps-2022.git'
               }
        }
	
        stage('Clean'){
            steps {
    
            sh "mvn clean"
               }
            
        }
        
        stage('Compile'){
            steps {
    
            sh "mvn compile"
               }
            
        }
        stage('Test'){
            steps {
    
            sh "mvn test"
               }
            
        }
        stage('Sonar'){
            steps {
            withSonarQubeEnv( installationName: 'sonar'){
            sh 'mvn sonar:sonar -Dsonar.login=1bd9c7b31d8efa3ac014c20c360b77b1204cc960'
               
            }
            
        }
    }    
    
    
        stage ("Nexuspackage"){
			steps{
			sh "mvn package"
			

                       
            }
	   
        }
	stage ("Nexusdeploy"){
	steps{
	sh "mvn deploy"

	}
	}
		    stage('Build image') {
            steps{
            script{
            dockerImage = docker.build("amineouerghi/devops:latest")
            }
            }
        }
        stage('Dockerhub Login') {

			steps {
				sh 'docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW'
			}
		}
        
        
        stage('Push') {

			steps {
				sh 'docker push amineouerghi/devops:latest'
			}
	}


    }
}
